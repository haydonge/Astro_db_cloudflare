---
import Footer from "../components/Footer.astro";
import Dialog2Stock from "../components/ui/Dialog2stock.astro";
import Uploadexcel from "../components/ui/Uploadgooglesheet.astro";
import Search2Data from "@/components/ui/Search2data.astro";
import NavBar from "../components/ui/NavBar.astro";
import Sidebar from "../components/ui/Sidebar.astro";
const { title = "库存管理", description = "库存管理系统" } = Astro.props;
---

<!doctype html>
<html lang="zh-CN" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>

  <body class="bg-white text-gray-800 flex flex-col min-h-full">
    <header class="bg-white border-b border-gray-200">
      <div class="container mx-auto px-4 py-3">
        <div class="flex justify-between items-center">
          <h1 class="text-2xl font-bold text-theme-accent">{title}</h1>
          <NavBar />
        </div>
      </div>
    </header>

    <div class="flex flex-1 overflow-hidden">
      <aside class="w-64 bg-gray-100 border-r border-gray-200 overflow-y-auto">
        <Sidebar />
      </aside>
      
      <main class="flex-1 overflow-y-auto p-6 bg-white">
        <div class="container mx-auto">
          <slot />
        </div>
      </main>
    </div>


    <Dialog2Stock />
    <Uploadexcel />
    <Search2Data />
  </body>
</html>